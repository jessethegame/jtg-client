.card
  padding 1em
  margin 1em
  &:after
    rise()
    z-index -1
    transform-origin center
    position absolute
    content ''
    display block
    background-color white
    top 0
    bottom 0
    left 0
    right 0
    background-color white
    background-color #fefefe

  position relative
  display inline-block

  width 90%

  @media (min-width: 720px)
    width 44%

  @media (min-width: 1140px)
    width 30%

button,
input
  height 2em
  line-height 2em
  padding 0 .5em

  &:active
  &[type="text"]
    sink()


button,
[type="submit"]
  // rise()
  hover-background(action-color, action-color-active)

  cursor pointer
  color #fff

// dropdown? yeah....
.liftup
  rise(2, false)

  margin 0
  position fixed
  bottom 0
  background-color #fefefe
  margin-top -1em

  height 28em

  transition transform .3s, width .3s

  width 100%
  background-color white


  .header
    height 3em
    line-height 3em
    padding 0 1em
    color white
    font-weight 700

    hover-background(accent-color, accent-color-active)

  .body,
  .footer
    margin 1em


.splash
  position relative
  text-align center
  // overflow hidden

  h2
    font-weight 700
    font-size 300%

  color white

  padding 6em 1em

  @media (min-width 600px)
    padding 8em 4em
    h2
      font-size 400%

  &:before
    z-index -1
    transform-origin center
    position absolute
    content ''
    display block
    background-color white
    width 100%
    height 80%
    top 10%
    left 50%
