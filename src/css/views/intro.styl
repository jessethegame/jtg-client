#toasts-intro
  position absolute
  top 10em
  width 20em

  left 50%
  transform translateX(-50%)

  toast
    border-radius 1em
    font-size 150%
    position relative

    &:before
      content ''
      position absolute
      display block
      left 50%
      top -.5em
      margin-left -.5em
      width 0
      height 0
      border-left .5em solid transparent
      border-right .5em solid transparent
      border-bottom .5em solid white

