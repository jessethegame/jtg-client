@import 'map'

@import url(http://fonts.googleapis.com/css?family=Quicksand:300,400,700)

action-color = #99cc66
action-color-active = #aadd77
accent-color = #66cc99
accent-color-active = #77ddaa
action-color = accent-color
action-color-active = accent-color-active

*
  box-sizing border-box
  vertical-align top

a,
a:hover,
a:visited,
a:active,
a:focus
  color inherit
  font inherit
  text-decoration inherit

a[href]
  text-decoration underline

[ng-click],
button
  cursor pointer

:focus
  outline-color transparent
  outline-style none

html,
body
  height 100%
  position relative

body
  font-family "Quicksand", Helvetica, sans-serif
  font-family "Quicksand", sans-serif !important
  background-color #eee
  margin 1em
  // margin-top 5em

  padding 4em

  @media (min-width: 600px)
    margin 0
    padding-top 5em
    // margin-top 4em
    margin-bottom 1em

h1,
h2,
h3
  font-weight inherit
  margin 0
  font-size 200%

h2
  padding .5em
  line-height 1em

h1
  position absolute
  top 0
  left 0
  padding-left 2em
  // padding 0 .5em
  margin-right 1em
  background-image url(/img/jesse.png)
  background-repeat no-repeat
  background-position .25em 0
  background-size 1.5em

  -webkit-transition background-position .3s

  line-height 2em

  @media (min-width: 600px)
    position static

header:hover
  h1
    background-position .25em -.25em

h2
  text-align center


ng-controller-off
  display none

button,
input
  height 2em
  line-height 2em
  border 0
  outline 0
  margin 0
  padding 0 .5em
  // font-size inherit
  font inherit

  &[type="text"]
    // box-shadow inset .25em .25em rgba(0,0,0,0.3)
    box-shadow inset .25em .25em rgba(0,0,0,0.15)

button
[type="submit"]
  cursor pointer
  margin -.25em 0 0 -.25em
  // box-shadow .25em .25em rgba(0,0,0,0.3)
  box-shadow .25em .25em rgba(0,0,0,0.15)
  background-color action-color
  color #fff
  transition background-color .15s

  &:hover
    background-color action-color-active

header
  position fixed
  top 0
  left 0
  width 100%
  height 4em
  background-color rgba(255,255,255,0.9)
  box-shadow 0 .5em rgba(0,0,0,0.15)
  // padding 1em

  font-size 75%

  @media (min-width: 600px)
    font-size 100%


#session
  padding 1em
  position absolute
  right 0
  top 0

#game
  display inline-block

#profile
  span
    display inline-block
    height 2em
    line-height 2em
    margin-right .5em

    @media (max-width: 600px)
      span
        display block
        height 1em
        line-height 1em

  .avatar
    margin-left 1em



.chat
  position fixed
  bottom 0
  background-color #fefefe
  margin-top -1em

  transition transform .3s, width .3s

  text-align left
  width 100%
  right 0em
  // padding 1em
  background-color rgba(255,255,255,1)
  box-shadow .5em .5em rgba(0,0,0,0.05)

  transform translateY(90%) translateX(0)
  &.expanded
    transform translateY(0%) translateX(0)

  @media (min-width: 800px)
    width 20em

    transform translateY(90%) translateX(-5em)
    &.expanded
      transform translateY(0%) translateX(-5em)


  .header
    height 3em
    line-height 3em
    padding 0 1em
    color white
    font-weight 700

    background-color accent-color
    transition background-color .15s
    &:hover
      background-color accent-color-active

  .body,
  .footer
    margin 1em

  .messages
    width 100%
    height 20em
    padding .5em
    overflow-y scroll
    box-shadow inset .25em .25em rgba(0,0,0,0.15)
    background-color #fff
    background-color #fefefe
    margin-bottom 1em

  form
    display flex
  input
    &[type=text]
      flex 4
    &[type=submit]
      flex 1

#github,
#game
  display block

  @media (min-width: 600px)
    display inline-block

    padding 1em
    flex 1 auto


@-webkit-keyframes loading
  0%, 100%
    border-top solid 2px red
  25%
    border-right solid 2px red
  50%
    border-bottom solid 2px red
  75%
    border-left solid 2px red

#session,
#chat,
.loading
  animation-name loading
  animation-duration 2s
  animation-timing-function ease-in
  animation-delay 0
  animation-iteration-count infinite
  animation-direction normal
  animation-play-state running

story,
challenge,
form.challenge
  width 90%
  display inline-block
  background-color white
  // padding 1em
  margin 1em

  @media (min-width: 720px)
    width 44%

  @media (min-width: 1140px)
    width 30%

challenge
  box-shadow .5em .5em rgba(0,0,0,0.15)

  text-align left

  hgroup
    h2
      text-align left
      font-size 150%
      line-height 1.6em
      height 1.6em
    h3
      font-size 80%
      line-height 2em
      height 2em

  article
    padding 0 1em

  img
    background-color #eee
    height 4em
    width 4em
    box-shadow .25em .25em rgba(0,0,0,0.15)
    margin -1.25em 1em 1em -1.25em
    margin -.25em 1em 1em -.25em
    float left


form.challenge
  box-shadow inset .5em .5em rgba(0,0,0,0.15)

  padding 1em

  textarea,
  select,
  input
    width 100%
    display block
    margin-bottom 1em
    font inherit

  select
    height 2em

  textarea
    resize none
    border 0
    height 5em
    padding 1em
    box-shadow inset .25em .25em rgba(0,0,0,0.15)


#navigation,
#accounts
  position fixed
  top 0
  padding-top 5em
  height 100%
  width 12em

  font-size 75%

  @media (min-width: 600px)
    font-size 100%

  background-color rgba(255,255,255,0.9)
  // box-shadow -.5em 0 rgba(0,0,0,0.15)
  // box-shadow -.25em 0 rgba(0,0,0,0.05)
  box-shadow .25em 0 rgba(0,0,0,0.05)


  -webkit-transition -webkit-transform .3s

#navigation
  left 0
  -webkit-transform translateX(-8em)
  &:hover
    -webkit-transform translateX(-.5em)
  box-shadow .25em 0 rgba(0,0,0,0.05)

#accounts
  right 0
  -webkit-transform translateX(8em)
  &:hover
    -webkit-transform translateX(.5em)

  .avatar
    height 4em
    width 4em

    margin -1em -1em -1em 1em

    display inline-block

    background-size cover
    background-position center center

  button
    height 4em
    width 100%
    margin-bottom 1em

    background-size 4em
    background-repeat no-repeat
    padding-left 4em

    background-size 5em

    -webkit-transition background .3s

    background-position 0 .5em
    &:hover
      background-position 0 -.5em

  .account
    background-position -.75em 0em
    &:hover
      background-position -.75em -.25em

  .facebook
    background-image url(/img/facebook.png)
    background-color #6666ee
    color #fff
    &:hover
      background-color #7777ff

  .twitter
    background-image url(/img/twitter.png)
    background-color #66eeff
    background-color #55acee
    color #fff
    &:hover
      background-color #77ffff
      background-color #66bdff

  .github
    background-image url(/img/github.png)
    background-color #222
    color #fff
    &:hover
      background-color #333

#toasts
  position fixed
  // bottom 0
  top 4em
  left 2em
  width 12em

  font-size 75%

  display flex
  flex-direction column-reverse

  @media (min-width: 600px)
    font-size 100%

  // background-color rgba(255,255,255,0.9)
  // box-shadow -.5em 0 rgba(0,0,0,0.15)

  -webkit-transition -webkit-transform .3s

@-webkit-keyframes toast
  0%
    border solid 5px red
  75%
    border solid 5px green

#toasts

  toast
    // margin-bottom 1em
    display block
    background-color white
    border-radius 0 1em 1em 1em
    padding 1em
    box-shadow 0 .5em rgba(0,0,0,0.05)
    margin-top -.5em

    .dismiss
      float right
      font-size 150%
      opacity .25

      &:hover
        opacity .5

    // button
    //   width 100%

    //   -webkit-animation-name toast
    //   -webkit-animation-duration 2s
    //   -webkit-animation-timing-function ease-in
    //   -webkit-animation-delay 0
    //   -webkit-animation-iteration-count infinite
    //   -webkit-animation-direction normal


  // toast:last-child
  //   margin-bottom 0

view
  display block

#intro
  margin 1em
  padding 1em
  background-color rgba(255,255,255,0.9)
  box-shadow .5em .5em rgba(0,0,0,0.05)

.row
  #intro
    display block

  @media (min-width: 800px)
    text-align center
    // #chat,
    #intro
      display inline-block
      width 45%
      text-align left


#github
  margin 1em
  padding 1em
  background-color rgba(255,255,255,0.9)
  box-shadow .5em .5em rgba(0,0,0,0.05)

  ul
    list-style none
    padding 0
    height 20em
    overflow-y scroll

  .date
    font-weight 300

story
  padding 1em
  box-shadow .5em .5em rgba(0,0,0,0.05)
  box-shadow .25em .25em rgba(0,0,0,0.05)
  position relative

  &:before
    width 2em
    height 2em
    position absolute
    top -.25em
    left -.25em
    content ''
    background-size 100%
    box-shadow .25em .25em rgba(0,0,0,0.05)
    background-position center center

  &.provider-github:before
    background-image url(/img/github.png)
    background-color #222

  &.provider-twitter:before
    background-image url(/img/twitter.png)
    background-color #55acee


#toasts
  z-index 1100
.chat
  z-index 1000
header
  z-index 900
aside
  z-index 800


main
  display block
  height 100%

  @media (min-width: 600px)
    // display flex
    display block
