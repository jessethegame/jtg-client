@import url(http://fonts.googleapis.com/css?family=Quicksand:300,400,700)

*
  box-sizing border-box
  vertical-align top

html,
body
  height 100%
  position relative

body
  font-family "Quicksand", Helvetica, sans-serif
  background-color #eee
  margin 1em
  margin-top 5em

  @media screen and (min-width 600px)
    margin 0
    margin-top 4em
    margin-bottom 1em

h1,
h2
  font-weight inherit
  height 2em
  line-height 2em
  margin 0
  font-size 200%

h1
  position absolute
  top 0
  left 0
  padding 0 .5em

  @media screen and (min-width 600px)
    position static

h2
  text-align center

minimap
  margin auto
  display flex
  width 400px
  height 400px
  width auto
  // border-radius 50%
  box-shadow .5em .5em rgba(0,0,0,0.3)
  background-color #eee
  position relative
  overflow hidden

google-map
  overflow hidden
  position absolute
  // border-radius 50%
  height 100%
  width 100%

ng-controller-off
  display none

button,
input
  height 2em
  line-height 2em
  border 0
  outline 0
  margin 0
  padding 0 .5em
  // font-size inherit
  font inherit

  &[type="text"]
    box-shadow inset .25em .25em rgba(0,0,0,0.3)

button
[type="submit"]
  cursor pointer
  margin -.25em 0 0 -.25em
  box-shadow .25em .25em rgba(0,0,0,0.3)
  background-color #99cc66
  color #fff

  &:hover
    background-color #aadd77


header
  z-index 100
  position fixed
  top 0
  left 0
  width 100%
  height 4em
  background-color rgba(255,255,255,0.8)
  box-shadow 0 .5em rgba(0,0,0,0.15)
  padding 1em

  font-size 75%%

  @media screen and (min-width 600px)
    font-size 100%

#session
  padding 1em
  position absolute
  right 0
  top 0

#game
  display inline-block

#profile
  span
    display inline-block
    height 2em
    line-height 2em
    margin-right .5em

    @media screen and (min-width 600px)
      display block



#chat
  .messages
    width 100%
    height 20em
    padding .5em
    overflow-y scroll
    box-shadow inset .25em .25em rgba(0,0,0,0.3)
    background-color #fff
    margin-bottom 1em
  form
    display flex
  input
    &[type=text]
      flex 4
    &[type=submit]
      flex 1

main
  display block
  height 100%

  @media screen and (min-width 600px)
    display flex

#chat,
#game
  display block

  @media screen and (min-width 600px)
    display inline-block

    padding 1em
    flex 1 auto


@-webkit-keyframes loading
  0%, 100%
    border-top solid 2px red
  25%
    border-right solid 2px red
  50%
    border-bottom solid 2px red
  75%
    border-left solid 2px red

#session,
#chat,
.loading
  -webkit-animation-name loading
  -webkit-animation-duration 2s
  -webkit-animation-timing-function ease-in
  -webkit-animation-delay 0
  -webkit-animation-iteration-count infinite
  -webkit-animation-direction normal
  -webkit-animation-play-state running

