mapsize = 600px

.minimap
  left 0
  height 31em
  transition-delay bottom .3s
  transform translateY(90%) translateX(0)
  transform translateY(25em) translateX(0)
  &.expanded
    transform translateY(0%) translateX(0)

  @media (min-width: 800px)
    bottom 0
    width 20em
    height 28em

    transform translateY(90%) translateX(5em)
    transform translateY(25em) translateX(5em)
    &.expanded
      transform translateY(0%) translateX(5em)

minimap,
google-map
  // width mapsize
  // height mapsize
  background-color #eee
  z-index -1

.map-wrapper
  position relative

  // width 300px
  // height 300px
  // height 20em
  height 100%
  overflow hidden

.map-wrapper:after
  content ''
  position absolute
  top 0
  left 0
  width 300px
  height 300px
  width 100%
  height 100%
  box-shadow inset .5em .5em rgba(0,0,0,0.15)
  box-shadow inset .25em .25em rgba(0,0,0,0.15)
  z-index 500
  pointer-events none

google-map,
.angular-google-map-container
  width 100%
  height 20em

