mapsize = 600px

minimap
  // display flex
  width mapsize
  height mapsize
  // width auto
  // border-radius 50%
  // box-shadow .5em .5em rgba(0,0,0,0.3)
  background-color #eee
  position absolute
  top 50%
  left 50%
  margin-top (mapsize / -2)
  margin-left (mapsize / -2)

  z-index -1

.map-wrapper
  width 300px
  height 300px
  overflow hidden
  border-radius 50%
  position fixed

  bottom 0
  left 0

  bottom -50px
  left -50px

  // -webkit-transform translate3d(-200px, 200px, 0)
  -webkit-transform scale(.5) translate3d(10px, -10px, 0)

  transition all 0.3s

  &.show,
  &:hover
    // -webkit-transform translate3d(20px, -20px, 0)
    -webkit-transform scale(1) translate3d(100px, -100px, 0)


.map-overlay
  width 300px
  height 300px
  border-radius 50%
  box-shadow inset 0 0 0 .25em rgba(0,0,0,0.3)
  z-index 1000
  pointer-events none

google-map
  overflow hidden
  position absolute
  // border-radius 50%
  height 100%
  width 100%
